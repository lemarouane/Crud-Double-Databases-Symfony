{% extends 'base.html.twig' %}

{% block title %}Modification d'un auteur{% endblock %}

{% block body %}
<h2>Modification d'un auteur</h2>
<a href="{{url('app_authors')}}"><button type="button" class="btn rounded-pill btn-success">Retour</button></a>
<div class="form-horizontal">
    {{ form_start(form) }}
        <div class="form-group">
            <label class="control-label col-sm-2" for="name">Nom de l'auteur :</label>
            <div class="col-sm-10">
                {{form_widget(form.name, {'attr': {'class': 'form-control','type':'text', placeholder:'Le nom de l\'auteur'}}) }}
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2" for="nationality">Nationalité :</label>
            <div class="col-sm-10">
                {{form_widget(form.nationality, {'attr': {'class': 'form-control','type':'text', placeholder:'La nationalité'}}) }}
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2" for="birthDate">Date de naissance :</label>
            <div class="col-sm-10">
                {{form_widget(form.birthDate, {'attr': {'class': 'form-control','type':'text', placeholder:'Date de naissance'}}) }}
            </div>
        </div>
        <div class="form-group button">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" name="modifier" class="btn btn-warning">Modifier</button>
            </div>
        </div>
    {{ form_end(form) }}
</div>
{% endblock %}